# Server Configuration
PORT=3000
NODE_ENV=development

# Binance API (Optional - most endpoints are public)
# Only needed for private endpoints (not required for this project)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here

# Binance API URLs
BINANCE_API_URL=https://api.binance.com
BINANCE_WS_URL=wss://stream.binance.com:9443

# Telegram Bot (for Phase 4)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Cache Settings
CACHE_TTL=60
CACHE_CHECK_PERIOD=120

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
